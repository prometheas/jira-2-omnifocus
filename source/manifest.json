{
  "manifest_version": 2,

  "name": "JIRA to OmniFocus",
  "description": "Adds a 'Send to OmniFocus' button to JIRA ticket pages.",
  "version": "1.2",

  "icons": {
    "256": "images/omnifocus-256.png"
  },

  "permissions": [],

  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*/browse/*",
        "*://*/*/browse/*"
      ],
      "css": [
        "css/content.css"
      ],
      "js": [
        "js/vendor/zeptojs/zepto.min.js",
        "js/vendor/turndown/turndown.js",
        "js/content.js"
      ]
    }
  ],

  "background": {
    "scripts": [
      "js/events.js"
    ],
    "persistent": false
  },

  "web_accessible_resources": [
    "images/omnifocus-32.png",
    "images/omnifocus-64.png",
    "images/omnifocus-256.png"
  ]
}
