[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

; npm community standards
; https://www.npmjs.org/doc/misc/npm-coding-style.html
[**.js]
indent_style = space
indent_size  = 2

[**.json]
indent_style = space
indent_size  = 2

[**.html]
intent_style = tab

[**.css]
intent_style = tab
